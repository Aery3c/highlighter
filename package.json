{
  "name": "highlighter",
  "version": "2.0.0",
  "description": "A light highlighter",
  "repository": "git@github.com:Aery3c/highlighter.git",
  "author": "Aery3c <aery3c@gmail.com>",
  "module": "lib/index.js",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/plugin-transform-flow-strip-types": "^7.19.0",
    "@babel/plugin-transform-modules-commonjs": "^7.20.11",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-flow": "^7.18.6",
    "@fezvrasta/tsc-silent": "^1.3.4",
    "@khanacademy/flow-to-ts": "^0.5.2",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "babel-loader": "^9.1.2",
    "babel-plugin-transform-flow-enums": "^0.0.2",
    "chalk": "4.1.2",
    "circular-dependency-plugin": "^5.2.2",
    "eslint": "^8.33.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-ft-flow": "^2.0.3",
    "eslint-webpack-plugin": "^3.2.0",
    "flow-bin": "^0.198.2",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "hermes-eslint": "^0.9.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.4.1",
    "react-dev-utils": "^12.0.1",
    "rimraf": "^4.1.2",
    "rollup": "^3.12.1",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "files": [
    "index.d.ts",
    "/build",
    "/dist",
    "/lib"
  ],
  "scripts": {
    "clean": "rimraf lib && rimraf dist && rimraf build",
    "test": "jest",
    "flow": "flow",
    "dev": "yarn clean; node scripts/dev.js",
    "build:es": "babel src -d lib",
    "build:typescript": "flow-to-ts \"src/**/*.js\" --write --inline-utility-types; tsc-silent --project .config/tsconfig.json --createSourceFile .config/createSourceFile.js --suppress @; rimraf --no-preserve-root src/**/*.ts",
    "build:bundles": "rimraf build && rollup --bundleConfigAsCjs -c .config/rollup.config.js",
    "build": "yarn clean && yarn build:es && yarn build:bundles && yarn build:typescript",
    "build:remove": "rimraf --no-preserve-root src/**/*.ts"
  },
  "babel": {
    "extends": "./.config/babel.config"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.6",
    "flow-enums-runtime": "^0.0.6"
  }
}
